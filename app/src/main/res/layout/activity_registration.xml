<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.projects.yatooooo.kz.loginandregistrationapp.RegistrationActivity">

    <EditText
        android:id="@+id/re_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="full name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <EditText
        android:id="@+id/re_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_email"
        app:layout_constraintVertical_bias="0.083"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/re_email"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/re_email"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/re_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_fullname"
        app:layout_constraintVertical_bias="0.025"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/re_fullname"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/re_fullname"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/re_password"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_username"
        app:layout_constraintVertical_bias="0.041"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/re_username"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/re_username"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/re_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re_password"
        app:layout_constraintVertical_bias="0.013"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/re_password"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/re_password"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/re_sign_in_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="sign in"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintRight_toLeftOf="@+id/re_sign_up_button"
        app:layout_constraintTop_toTopOf="@+id/re_sign_up_button" />

    <Button
        android:id="@+id/re_sign_up_button"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_light"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/re_confirm_password"
        app:layout_constraintRight_toRightOf="@+id/re_confirm_password"
        app:layout_constraintTop_toBottomOf="@+id/re_confirm_password"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/re_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@+id/re_fullname"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintLeft_toLeftOf="@+id/re_fullname"
        app:layout_constraintRight_toRightOf="@+id/re_fullname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
